
@{
    ViewBag.Title = "SalesReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>SalesReport</h2>
    <br />
    <div class="box col-md-12">
        <div class="row">
            <h4 style="padding-left:2%;">Filters</h4>
        </div>
        <div class="row">
            <span class="form-inline" style="padding-left:2%">
                <label>User</label>
                <select id="userDropDown" class="form-control">
                    <option disabled selected value="">-Select User-</option>
                    <option value="MWalters">MWalters</option>
                </select>
                <label>From Date:</label>
                <input id="fromDate" type="text" class="form-control" />
                <label>To Date:</label>
                <input id="toDate" type="text" class="form-control" />
            </span>
        </div>
        <br />
        <div class="row">
            <span style="padding-left:2%">
                <button id="filterSearchButton" class="btn btn-default col-md-2" style="Margin-left:5%;">Search</button>
            </span>
        </div>
    </div>
    
    <div class="row">
        <br />
        <h4>Search Results</h4>
        <br />
        <table class="table table-bordered table-striped table-responsive">
            <tr>
                <th>User</th><th>Total Sales</th><th>Total Vehicles</th>
            </tr>
            <tr id="contentRows">

            </tr>
        </table>
    </div>
</div>


